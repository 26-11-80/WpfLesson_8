<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="White"/>

    </Style>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Menu.Foreground" Value="Black"/>
        <Setter Property="Menu.Padding" Value="10"/>
    </Style>

    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="ToolBar.Background" Value="Gray"/>
        <Setter Property="ToolBar.Foreground" Value="Black"/>
        <Setter Property="ToolBar.Padding" Value="10"/>
    </Style>

    <Style x:Key="ComboBoxStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="ComboBox.Foreground" Value="Black"/>
    </Style>

    <Style x:Key="RadioButtonStyle"  BasedOn="{StaticResource WindowStyle}">
        <Setter Property="RadioButton.Foreground" Value="Black"/>
        <Setter Property="RadioButton.BorderBrush" Value="Black"/>
    </Style>

    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBox.Foreground" Value="Black"/>
        <Setter Property="TextBox.Padding" Value="10"/>
    </Style>


</ResourceDictionary>